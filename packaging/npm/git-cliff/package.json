{
  "name": "git-cliff",
  "version": "1.0.0",
  "description": "A highly customizable Changelog Generator that follows Conventional Commit specifications ⛰️",
  "bin": "lib/index.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc",
    "dev": "yarn build && node lib/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orhun/git-cliff.git"
  },
  "keywords": [
    "git",
    "git-cliff",
    "git-changelog",
    "changelog",
    "versioning",
    "changelog-generator",
    "rust"
  ],
  "author": "git-cliff contributors <git-cliff@protonmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/orhun/git-cliff/issues"
  },
  "homepage": "https://github.com/orhun/git-cliff#readme",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "typescript": "^4.9.4"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "lib/*"
    ],
    "root": true
  }
}
